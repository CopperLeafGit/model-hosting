<body>

<model-viewer
    id="modelViewer"
    src="https://cdn.jsdelivr.net/gh/CopperLeafGit/model-hosting/TallSpeakerBlack7.glb"
    ios-src="https://cdn.jsdelivr.net/gh/CopperLeafGit/model-hosting/TallSpeakerBlack7.usdz"
    alt="Speaker"
    ar
    ar-modes="webxr scene-viewer quick-look"
    ar-scale="auto"
    auto-rotate
    camera-controls
    placement="floor"
    exposure="1"
    reveal="auto"
    touch-action="pan-y"
    style="width: 100%; height: 100%; display: block;">
</model-viewer>

<button id="arButton">View in your space</button>

<script>
    window.onload = function () {
        const modelViewer = document.getElementById("modelViewer");
        const arButton = document.getElementById("arButton");

        // Ensure AR Button works when clicked
        arButton.addEventListener("click", function () {
            console.log("AR Button clicked");

            // Trigger AR activation
            modelViewer.activateAR();
            console.log("AR activated!");
        });
    };
</script>

